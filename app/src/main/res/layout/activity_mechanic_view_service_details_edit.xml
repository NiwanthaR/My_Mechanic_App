<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.mechanic_view_service_details_edit">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/post_edit_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit My Service"
                        android:fontFamily="@font/calistoga_regular"
                        android:textAlignment="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:background="@color/colorPrimary"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_below="@+id/dis_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/service_icon"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#1C2833"
                                android:fontFamily="@font/baloobhai2_semibold"
                                android:text="Service Package Name"
                                android:layout_marginLeft="2dp"/>

                            <EditText
                                android:id="@+id/et_service_details_edit_title"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:paddingLeft="6dp"
                                android:textSize="18dp"
                                android:textColor="#1C2833"
                                android:fontFamily="@font/philosopher_regular"
                                android:hint="Service Package Name"/>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_service_details_edit_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blank_user_new"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_description"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#1C2833"
                                android:text="Description"
                                android:fontFamily="@font/baloobhai2_semibold"
                                android:paddingBottom="5dp"
                                android:layout_marginLeft="6dp"/>

                            <EditText
                                android:id="@+id/et_service_details_edit_details"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:layout_marginRight="25dp"
                                android:paddingLeft="6dp"
                                android:fontFamily="@font/philosopher_regular"
                                android:textSize="18dp"
                                android:textColor="#1C2833"
                                android:hint="Your Description"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="25dp">

                            <ImageView
                                android:layout_marginTop="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_doller"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#1C2833"
                                    android:text="Service Price"
                                    android:fontFamily="@font/baloobhai2_semibold"
                                    android:layout_marginLeft="2dp"/>

                                <EditText
                                    android:id="@+id/et_service_details_edit_price"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="4dp"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/philosopher_regular"
                                    android:textColor="#1C2833"
                                    android:hint="Price"/>
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="10dp">

                            <ImageView
                                android:layout_marginTop="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/contact_icon"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#1C2833"
                                    android:text="Contact"
                                    android:fontFamily="@font/baloobhai2_semibold"
                                    android:layout_marginLeft="2dp"/>

                                <EditText
                                    android:id="@+id/et_service_details_edit_contact"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="25dp"
                                    android:paddingLeft="4dp"
                                    android:textSize="18dp"
                                    android:fontFamily="@font/philosopher_regular"
                                    android:textColor="#1C2833"
                                    android:hint="Contact"/>
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_shop_wall"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#1C2833"
                                android:fontFamily="@font/baloobhai2_semibold"
                                android:text="Service Store Name"
                                android:layout_marginLeft="2dp"/>

                            <TextView
                                android:id="@+id/tv_service_details_edit_store_name"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:paddingLeft="2dp"
                                android:textSize="18dp"
                                android:fontFamily="@font/philosopher_regular"
                                android:textColor="#1C2833"
                                android:hint="Service Package Name"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="25dp">

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/addres_icon"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#1C2833"
                                android:fontFamily="@font/baloobhai2_semibold"
                                android:text="Service Store Location"
                                android:layout_marginLeft="2dp"/>

                            <TextView
                                android:id="@+id/tv_service_details_edit_location"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:paddingLeft="2dp"
                                android:textSize="18dp"
                                android:fontFamily="@font/philosopher_regular"
                                android:textColor="#1C2833"
                                android:hint="Service Package Name"/>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_et_service_details_edit_upload_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="45dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/et_service_details_edit_upload_progess_bar"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="40dp"
                                android:layout_marginLeft="40dp"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/et_service_details_edit__progress_presantage"
                                android:layout_width="match_parent"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:fontFamily="@font/baloo_chettan"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/mechanic_upload_progess"
                                android:gravity="center" />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_service_details_edit_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_service_details_edit_wrong_details"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/wrong_message"
                        android:fontFamily="@font/philosopher_regular"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:layout_gravity="center"/>


                        <Button
                            android:id="@+id/btn_et_service_details_edit_update"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/headlandone_regular"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/button_shape"
                            android:text="Update Details"/>


                        <Button
                            android:id="@+id/btn_et_service_details_edit_delete"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/headlandone_regular"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="25dp"
                            android:background="@drawable/button_shape"
                            android:text="Delete AD"/>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
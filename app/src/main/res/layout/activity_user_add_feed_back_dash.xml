<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.user_add_feed_back_dash">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback Given"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:fontFamily="@font/calistoga_regular"
        style="@style/TextAppearance.AppCompat.Headline"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="25dp">

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_shop_wall"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1C2833"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/baloobhai2_semibold"
                            android:text="Mechanic Store Name"
                            android:layout_marginLeft="2dp"/>

                        <TextView
                            android:id="@+id/tv_feedback_store_name"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:paddingLeft="2dp"
                            android:textSize="18dp"
                            android:fontFamily="@font/philosopher_regular"
                            android:textColor="#1C2833"
                            android:text="Store Name"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="25dp">

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/profile1_icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1C2833"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:fontFamily="@font/baloobhai2_semibold"
                            android:text="User Name"
                            android:layout_marginLeft="2dp"/>

                        <TextView
                            android:id="@+id/tv_feedback_user_name"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:paddingLeft="2dp"
                            android:textSize="18dp"
                            android:fontFamily="@font/philosopher_regular"
                            android:textColor="#1C2833"
                            android:text="User Name"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:background="#FCF3CF"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/amaranth_italic"
                android:text="Add Image Here..!!"/>

            <ImageView
                android:id="@+id/img_feedback_upload_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/add_repair"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>





        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="25dp">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/my_feedback"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1C2833"
                        android:text="Description"
                        android:fontFamily="@font/baloobhai2_semibold"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="6dp"/>

                    <EditText
                        android:id="@+id/et_feedback_details"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:fontFamily="@font/philosopher_regular"
                        android:layout_marginRight="25dp"
                        android:paddingLeft="6dp"
                        android:textSize="18dp"
                        android:textColor="#1C2833"
                        android:background="@drawable/text_view_design"
                        android:hint="Your Comment"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/spn_feedback_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:autofillHints="Set Your Satisfaction"
                android:layout_marginBottom="8dp"
                android:background="@drawable/text_view_design"
                android:layout_marginLeft="70dp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_feedback_upload_state"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ProgressBar
                    android:id="@+id/feedback_upload_progess_bar"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="70dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_below="@id/price_layout"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_feedback_upload_progress_presantage"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:fontFamily="@font/philosopher_regular"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mechanic_upload_progess"
                    android:gravity="center" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_feedback_upload"
                android:layout_below="@id/mechanic_upload_post_progessdisplay"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/headlandone_regular"
                android:background="@drawable/button_shape"
                android:text="Submit"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
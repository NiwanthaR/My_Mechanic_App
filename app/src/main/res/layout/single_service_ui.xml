<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_margin="4dp"
    android:background="@drawable/single_ui_seller_new">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/single_service_ui_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/loarding"
                android:layout_marginLeft="8dp"
                android:scaleType="fitCenter"
                android:paddingLeft="3dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/single_service_ui_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Title Here"
                    android:fontFamily="@font/exo_semibold"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:paddingTop="8dp"
                    android:drawableLeft="@drawable/ic_service_package"
                    android:drawablePadding="4dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/single_service_ui_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Store Name"
                    android:textSize="15dp"
                    android:fontFamily="@font/baloobhai2_semibold"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:drawableLeft="@drawable/ic_shop_wall"
                    android:drawablePadding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/single_service_ui_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Price"
                        android:fontFamily="@font/amaranth_italic"
                        android:textSize="16dp"
                        android:paddingLeft="5dp"
                        android:drawableLeft="@drawable/ic_doller"
                        android:drawablePadding="5dp"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/single_service_ui_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:fontFamily="@font/amaranth_italic"
                        android:textSize="16dp"
                        android:drawableLeft="@drawable/addres_icon"
                        android:drawablePadding="5dp"
                        android:text="Location"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Click to more..."
                    android:fontFamily="@font/baloo_chettan"
                    android:paddingLeft="5dp"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/ic_go"
                    android:drawablePadding="5dp"/>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>



</LinearLayout>
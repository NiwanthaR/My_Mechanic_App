<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.user_change_email">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <RelativeLayout
                android:id="@+id/layoutHead"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_view"
                    android:background="@drawable/blank_user"
                    android:layout_centerInParent="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <TextView
                    android:text="Update Email"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/image_view"
                    android:enabled="true"
                    android:id="@+id/edit_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="4">

            <LinearLayout
                android:animateLayoutChanges="true"
                android:id="@+id/layoutPassword_ce"
                android:padding="16dp"
                android:visibility="visible"
                android:layout_below="@id/layoutHead"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="To change email you need to enter your password again"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:id="@+id/et_passAuth_ce"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:background="@drawable/text_view_design"
                    android:inputType="textPassword"
                    android:singleLine="true"/>

                <Button
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Authenticate"
                    android:id="@+id/btn_passAuth_ce"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_shape"/>

            </LinearLayout>


            <LinearLayout
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:visibility="invisible"
                android:id="@+id/layoutUpdateEmail_ce"
                android:padding="16dp"
                android:layout_below="@id/layoutHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:textAlignment="center"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="Enter your new email address here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:id="@+id/et_updateEmai_ce"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="New Email"
                    android:background="@drawable/text_view_design"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"/>

                <Button
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Update"
                    android:id="@+id/btn_updateemail_ce"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_shape"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
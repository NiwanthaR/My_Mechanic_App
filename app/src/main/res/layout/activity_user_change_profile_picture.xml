<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.user_change_profile_picture">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_user_change_image"
                android:background="@drawable/blank_user"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="110dp"
                android:layout_height="110dp"/>

            <TextView
                android:text="Change Profile Picture"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/img_user_change_image"
                android:enabled="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:animateLayoutChanges="true"
        android:padding="16dp"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F0F3F4"
        android:layout_weight="4">

        <TextView
            android:textAlignment="center"
            android:layout_marginBottom="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="To change Profile Picture you need to select New Image"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_upload_new_image"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/blank_user_new"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:text="Please click image to chooses your image....!"/>

        <Button
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="Upload New Image"
            android:id="@+id/btn_user_change_image"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"/>

    </LinearLayout>

</LinearLayout>
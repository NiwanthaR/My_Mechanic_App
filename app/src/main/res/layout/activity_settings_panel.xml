<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.settings_panel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:textStyle="bold"
                android:fontFamily="@font/exo_semibold"
                android:textColor="#17202A "
                android:text="Account Settings"
                android:textSize="30dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_st_change_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/headlandone_regular"
                android:background="@drawable/button_shape"
                android:text="Change Email Address"/>

            <Button
                android:id="@+id/btn_st_change_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/headlandone_regular"
                android:background="@drawable/button_shape"
                android:text="Change Password"/>

            <Button
                android:id="@+id/btn_st_change_profilepic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/headlandone_regular"
                android:background="@drawable/button_shape"
                android:text="Change Profile Picture"/>

            <Button
                android:id="@+id/btn_st_delete_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/headlandone_regular"
                android:background="@drawable/button_shape"
                android:text="Delete My Account"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>